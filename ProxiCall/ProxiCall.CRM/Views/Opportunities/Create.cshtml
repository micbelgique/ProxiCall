@using Microsoft.AspNetCore.Identity
@using ProxiCall.CRM.Models
@model ProxiCall.CRM.Models.Opportunity
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Opportunity</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OwnerId" value="@UserManager.GetUserId(User)"/>
            <div class="form-group">
                <label asp-for="LeadId" class="control-label"></label>
                <select asp-for="LeadId" class ="form-control" asp-items="ViewBag.LeadId"><option></option></select>
            </div>
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <select asp-for="ProductId" class ="form-control" asp-items="ViewBag.ProductId"><option></option></select>
            </div>
            <div class="form-group">
                <label asp-for="EstimatedCloseDate" class="control-label"></label>
                <input asp-for="EstimatedCloseDate" class="form-control"  type="date"/>
                <span asp-validation-for="EstimatedCloseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comments" class="control-label"></label>
                <input asp-for="Comments" class="form-control" />
                <span asp-validation-for="Comments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" asp-items="ViewBag.Status"><option></option></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Confidence" class="control-label"></label>
                <select asp-for="Confidence" class="form-control" asp-items="ViewBag.Confidence"><option></option></select>
                <span asp-validation-for="Confidence" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
